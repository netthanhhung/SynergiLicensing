<UserControl x:Class="Synergi.Licensing.Silverlight.UI.Highlight"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <Grid
        HorizontalAlignment="Right">
        <Path
            x:Name="uiPath"
            Stroke="{Binding HighlightBrush}"
            StrokeThickness="4"
            StrokeStartLineCap="Round"
            StrokeEndLineCap="Round">
            <Path.Data>
                <PathGeometry>
                    <PathFigure
                        StartPoint="0,4">
                        <LineSegment
                            Point="90,4">
                        </LineSegment>
                        <ArcSegment
                            Size="8,8"
                            RotationAngle="0"
                            IsLargeArc="False"
                            SweepDirection="Clockwise"
                            Point="98,12" />
                        <LineSegment
                            Point="98,40"></LineSegment>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Grid>
    
</UserControl>
