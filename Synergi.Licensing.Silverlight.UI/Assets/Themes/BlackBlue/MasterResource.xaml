<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="TextBox.xaml"/>
        <ResourceDictionary Source="RadWindow.xaml"/>
        <ResourceDictionary Source="RadComboBox.xaml"/>
        <ResourceDictionary Source="RadMaskedTextBox.xaml"/>
        <ResourceDictionary Source="RadNumericUpDown.xaml"/>
        <ResourceDictionary Source="RadDatePicker.xaml"/>
        <ResourceDictionary Source="RadTabItem.xaml"/>
        <ResourceDictionary Source="RadTreeView.xaml"/>
        <ResourceDictionary Source="RadGridView.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ******LAYOUT STYLES****** -->
    <!-- **************************** -->

    <!-- Page Content Grid Style -->
    <Style x:Key="PageContentGridStyle" TargetType="Grid">
        <Setter Property="Opacity" Value="0.9"/>
        <Setter Property="Margin" Value="10"/>
    </Style>
    
    <!--Common Style-->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
</ResourceDictionary>
